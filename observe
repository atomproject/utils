#!/usr/bin/env bash

set -e

print_help() {
	cat <<EOF
usage: observe --out-dir=<dir> <list of input dirs>

--out-dir: the directory to which changes in an element will be copied
EOF
	exit 1
}

if (($# < 1)); then
	print_help
fi

dirs=()

for opt in "${@:1}"; do
	case "$opt" in
		--out-dir=*)
			out_dir="${opt#*=}"
		;;
		*)
			dirs+=("$opt")
		;;
	esac
done

if [[ -z "$out_dir" ]]; then
	print_help
fi

for dir in "${dirs[@]}"; do
	pushd "$dir" >/dev/null

	name="${dir##*/}"
	git ls-files | grep -hvE '(^\.)|(/\.)|(README)' | while read -r line; do
		printf "%50s => %s\n" "$dir/$line" "$out_dir/$name/$line"
	done

	popd >/dev/null
done > paths.txt

node index.js
